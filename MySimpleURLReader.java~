 * @author Ceyda Dereci
 * @since 22.10.2020
 */
public class MySimpleURLReader extends cs1.SimpleURLReader {

    protected String url;

    public MySimpleURLReader(String url){
        super(url);
    }


    public String getURL(){
        return url;
    }

    public String getName(){
        String name;
        int loc;

        name = "";
        loc = 0;

        for(int i = url.length(); i >= 0; i-- ){
            if(url.charAt(i) == '/')
               loc = i;
        }

        for(int k = loc; k < url.length(); k++)
            name += url.charAt(k);
        return name;
    }


    public String[] getNumberOfCSSLinks(){
        int index;
        String contents;
        index = 0;
        contents = getPageContents();
        for(int i = 0; i < contents.length(); i++){
            index = +1;
        }
        String[] array = new String[index];
        return array;
    }

}
